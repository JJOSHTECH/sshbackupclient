
echo "$(date +%Y-%m-%d\ %H:%M) Backup Started" >> /dev/stdout 2>&1
curl -sX POST -H 'Content-type: application/json' --data '{"text":"Backup Started"}' $SLACK_HOOK >> /dev/stdout 2>&1

rsync -vaze "ssh -p $PORT" root@$SERVER_ADDRESS:/var/backup/ /var/backup/ >> /dev/stdout 2>&1

echo "$(date +%Y-%m-%d\ %H:%M) Backup Started" >> /dev/stdout 2>&1
curl -sX POST -H 'Content-type: application/json' --data '{"text":"Backup Finished"}' $SLACK_HOOK >> /dev/stdout 2>&1
